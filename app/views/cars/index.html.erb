<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gos num</th>
      <th>Ptc</th>
      <th>Pictures</th>
      <th>Date ptc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.gos_num %></td>
        <td><%= car.ptc %></td>
        <td><% if car.pictures.size>0 %>
            <%= car.pictures.size %>
              <%end%></td>
        <td><%= car.date_ptc %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

